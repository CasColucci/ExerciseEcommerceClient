@model EcommerceClient.Models.CreateProduct
<div class="container p-4 border">
    <div class="row">
        <div class="col">
            <h1 class="text-primary">Create A Product</h1>
        </div>
    </div>
    <form>
        <label>Name</label>
        <input class="form-control" type="text" placeholder="Name of product" asp-for="Name" />
        <label class="mt-4">Description</label>
        <input class="form-control" type="text" placeholder="Description of product" asp-for="Description" />
        <label class="mt-4">Price</label>
        <input class="form-control" type="number" placeholder="Price of product" asp-for="Price" step="0.01" />
        <label class="mt-4">Category</label>
        @Html.DropDownListFor(model => model.Categories)

        <a class="btn btn-primary mt-4" type="submit">Create Product</a>
    </form>
</div>